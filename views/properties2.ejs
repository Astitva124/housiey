            <div class="main-content">

                <div class="page-content">
                    <div class="container-fluid">
                        <!-- start page title -->
                        <div class="row">
                            <div class="col-12">
                                <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                                    <!-- <h4 class="mb-sm-0 font-size-18">Leads Table</h4> -->
                                </div>
                            </div>
                        </div>

                    
                        <!-- end page title -->

                        <!-- Upload FIles and Vide Sections -->                        
                        <div class="row">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-body">

                                        <!-- allert -->
                                        

                                        <h4 class="mb-sm-0 font-size-18"><%=SPname%> > Properties</h4>

                                        <!-- table -->
                                        <table id="propertyTable" class="table table-bordered  nowrap w-100">
                                            <thead>
                                            <tr>
                                                <th>Project Name</th>
                                                
                                                <th>Allot Properties</th>
                                            </tr>
                                            </thead>
        
                                            <tbody>

                                                <% properties.forEach(function(property){ %>
                                                    <tr>
                                                        <td><%= property.project_name %> </td>
                                                        <% if (property.seller_id!=null && property.seller_id.includes(id)) { %>
                                                            <td><input class="form-check-input" type="checkbox" onchange="changeProperty('<%=id%>', '<%=property.id%>')" value="true" checked id="flexCheckDefault"></td>
                                                        <% } else { %>
                                                            <td><input class="form-check-input" type="checkbox" onchange="changeProperty('<%=id%>', '<%=property.id%>')" value="false" id='<%=property.id%>'></td>
                                                        <% } %> 
                                                                       
                                                    </tr>
                                                <% }) %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div> <!-- end col -->
                        </div> <!-- end row -->
                        
                    </div> <!-- container-fluid -->

                </div>
                  
                    <div class="toast" data-bs-autohide="true" id="myToast" style="position: absolute; top: 0; right: 0;z-index: 9999;">
                      <div class="toast-header">
                        
                        <strong class="mr-auto">Status</strong>
                       
                        <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                        </button>
                      </div>
                      <div class="toast-body">
                        Properties updated
                      </div>
                    </div>
               
                <!-- End Page-content -->
                
                <%- include('templates/footer') %> 
